@page
@model WebApp.Pages_Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Game details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Game!.GameName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Date created
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.Description)
        </dd>
        <dt class="col-sm-3">
            First player
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.FirstPlayer.Name)
        </dd>
        <dt class="col-sm-3">
            Second player
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.SecondPlayer.Name)
        </dd>
        <dt class="col-sm-3">
            Currently first player's turn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.CurrentPlayerFirst)
        </dd>
        <dt class="col-sm-3">
            Next move after a hit
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.NextMoveAfterHit)
        </dd>
        <dt class="col-sm-3">
            Can ships touch
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game!.EShipsCanTouch)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
