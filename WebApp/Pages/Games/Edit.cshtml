@page
@model WebApp.Pages_Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game!.GameId" />
            <div class="form-group">
                <label asp-for="Game!.Description" class="control-label"></label>
                <input asp-for="Game!.Description" class="form-control" />
                <span asp-validation-for="Game!.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game!.GameName" class="control-label"></label>
                <input asp-for="Game!.GameName" class="form-control" />
                <span asp-validation-for="Game!.GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game!.FirstPlayerId" class="control-label"></label>
                <select asp-for="Game!.FirstPlayerId" class="form-control" asp-items="ViewBag.FirstPlayerId"></select>
                <span asp-validation-for="Game!.FirstPlayerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game!.SecondPlayerId" class="control-label"></label>
                <select asp-for="Game!.SecondPlayerId" class="form-control" asp-items="ViewBag.SecondPlayerId"></select>
                <span asp-validation-for="Game!.SecondPlayerId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Game!.CurrentPlayerFirst" /> @Html.DisplayNameFor(model => model.Game!.CurrentPlayerFirst)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Game!.NextMoveAfterHit" class="control-label"></label>
                <select asp-for="Game!.NextMoveAfterHit" class="form-control"></select>
                <span asp-validation-for="Game!.NextMoveAfterHit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game!.EShipsCanTouch" class="control-label"></label>
                <select asp-for="Game!.EShipsCanTouch" class="form-control"></select>
                <span asp-validation-for="Game!.EShipsCanTouch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
